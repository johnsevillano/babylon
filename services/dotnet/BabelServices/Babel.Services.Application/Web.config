<?xml version="1.0"?>
<configuration>
	<system.web>
		<compilation debug="true" targetFramework="4.0"/>
		<pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/></system.web>
	<system.serviceModel>
		<bindings>
			<wsHttpBinding>
				<binding name="wsHttpBindingNoSecurity">
					<security mode="None">
						<transport clientCredentialType="None"/>
						<message clientCredentialType="None" negotiateServiceCredential="false" establishSecurityContext="false"/>
					</security>
				</binding>
			</wsHttpBinding>
		</bindings>
		<services>
			<service behaviorConfiguration="BabelServiceBehavior" name="Babel.Services.ProfileService">
				<endpoint address="" binding="wsHttpBinding" bindingConfiguration="wsHttpBindingNoSecurity" bindingNamespace="http://profile.services.babel.com" contract="Babel.Services.IProfileService"/>
				<endpoint address="basic" binding="basicHttpBinding" bindingNamespace="http://profile.services.babel.com" contract="Babel.Services.IProfileService"/>
				<endpoint address="mex" binding="mexHttpBinding" bindingNamespace="http://profile.services.babel.com" contract="IMetadataExchange"/>
			</service>
			<service behaviorConfiguration="BabelServiceBehavior" name="Babel.Services.GroupService">
				<endpoint address="" binding="wsHttpBinding" bindingConfiguration="wsHttpBindingNoSecurity" bindingNamespace="http://group.services.babel.com" contract="Babel.Services.IGroupService"/>
				<endpoint address="basic" binding="basicHttpBinding" bindingNamespace="http://group.services.babel.com" contract="Babel.Services.IGroupService"/>
				<endpoint address="mex" binding="mexHttpBinding" bindingNamespace="http://group.services.babel.com" contract="IMetadataExchange"/>
			</service>
			<service behaviorConfiguration="BabelServiceBehavior" name="Babel.Services.MediaService">
				<endpoint address="" binding="wsHttpBinding" bindingConfiguration="wsHttpBindingNoSecurity" bindingNamespace="http://media.services.babel.com" contract="Babel.Services.IMediaService"/>
				<endpoint address="basic" binding="basicHttpBinding" bindingNamespace="http://media.services.babel.com" contract="Babel.Services.IMediaService"/>
				<endpoint address="mex" binding="mexHttpBinding" bindingNamespace="http://media.services.babel.com" contract="IMetadataExchange"/>
			</service>
		</services>
		<behaviors>
			<serviceBehaviors>
				<behavior name="BabelServiceBehavior">
					<serviceMetadata httpGetEnabled="true"/>
					<serviceDebug includeExceptionDetailInFaults="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
	<system.webServer>
		<defaultDocument>
			<files>
				<add value="ProfileService.svc"/>
				<add value="GroupService.svc"/>
				<add value="MediaService.svc"/>
			</files>
		</defaultDocument>
	</system.webServer>
</configuration>
