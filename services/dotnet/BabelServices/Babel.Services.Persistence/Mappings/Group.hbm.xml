<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Babel.Services.Persistence" namespace="Babel.Services.Domain">
  <class name="Group" table="[Group]">
    <id name="ID">
      <generator class="guid" />
    </id>
    <property name="Name" not-null="true" />
    <property name="Description" />
    <property name="Interests" />
    <property name="CreatedOn" />
    <property name="UpdatedOn" />
    <bag name="Members" table="GroupMembers" lazy="true" cascade="save-update">
      <key column="ID" />
      <many-to-many class="Profile" column="MemberID" />
    </bag>
  </class>
</hibernate-mapping>
