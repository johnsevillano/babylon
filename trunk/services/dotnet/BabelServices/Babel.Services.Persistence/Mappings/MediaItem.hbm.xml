<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Babel.Services.Persistence" namespace="Babel.Services.Domain">
  <class name="MediaItem" table="[MediaItem]">
    <id name="ID">
      <generator class="guid" />
    </id>
    <property name="Name" not-null="true" />
    <property name="Title" />
    <property name="Type" not-null="true" />
    <property name="Format" not-null="true" />
    <property name="AlternativeText" />
    <property name="UploadedOn" />
    <property name="Bytes" type="BinaryBlob">
      <column name="Bytes" sql-type="varbinary(max)" />
    </property>
    <many-to-one name="Owner" column="OwnerID" class="Profile" />
  </class>
</hibernate-mapping>
