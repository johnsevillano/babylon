<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="Babylon.Services.Model">
  <class name="NewsItem" table="NEWS_ITEM">
      <id name="id" column="ID">
          <generator class="guid"/>
      </id>
      <property name="title" column="TITLE"/>
      <property name="body" column="BODY"/>
      <property name="reportedOn" column="REPORTED_ON"/>
      <property name="reportedBy" column="REPORTED_BY"/>
      <property name="picture" column="PICTURE" type="binary" length="16777216"/>
      <property name="pictureSize" column="PICTURE_SIZE"/>
      <property name="pictureScale" column="PICTURE_SCALE"/>
      <property name="reviews" column="REVIEWS"/>
      <property name="rating" column="RATING"/>
      <list name="tags" table="NEWS_ITEM_TAGS" lazy="false">
          <key column="NEWS_ITEM_ID" not-null="true"/>
          <list-index column="TAG_ORDER"/>
          <element column="TAG" type="string" not-null="true"/>
      </list>
      <map name="categories" table="NEWS_ITEM_CATEGORIES" lazy="false">
          <key column="NEWS_ITEM_ID" not-null="true"/>
          <map-key column="CATEGORY_KEY" type="string"/>
          <element column="CATEGORY_NAME" type="string" not-null="true"/>
      </map>
  </class>
</hibernate-mapping>
